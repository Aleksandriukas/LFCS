{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "LFCS",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "shell": {
                "all": true,
                "open": true,
                "execute": true,
                "sidecar": true
            },
            "window": {
                "all": true,
                "create": true,
                "center": true,
                "requestUserAttention": true,
                "setResizable": true,
                "setTitle": true,
                "maximize": true,
                "unmaximize": true,
                "minimize": true,
                "unminimize": true,
                "show": true,
                "hide": true,
                "close": true,
                "setDecorations": true,
                "setAlwaysOnTop": true,
                "setSize": true,
                "setMinSize": true,
                "setMaxSize": true,
                "setPosition": true,
                "setFullscreen": true,
                "setFocus": true,
                "setIcon": true,
                "setSkipTaskbar": true,
                "setCursorGrab": true,
                "setCursorVisible": true,
                "setCursorIcon": true,
                "setCursorPosition": true,
                "setIgnoreCursorEvents": true,
                "startDragging": true,
                "print": true
            }
        },
        "bundle": {
            "active": true,
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.tauri.dev",
            "targets": "all"
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "LFCS",
                "width": 1200,
                "height": 1080
            }
        ]
    }
}
